<div class="pure-g">
  <div class="pure-u-1-24 pure-u-md-1-6 pure-u-xl-1-4"></div>
  <div class="pure-u-22-24 pure-u-md-2-3 pure-u-xl-1-2">
    <h2><%= t('.sign_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                 html: { class: 'pure-form pure-form-stacked devise-login-form'}) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.label :remember_me, class: 'pure-checkbox' do %>
            <%= f.check_box :remember_me %>
            <%= resource.class.human_attribute_name(:remember_me) %>
          <% end %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.button icon('fas', 'sign-in-alt', t('.sign_in')),
                     class: 'pure-button button-primary pure-button-block mb-3' %>
        <%= render 'devise/shared/links' %>
      </div>
    <% end %>

  </div>
  <div class="pure-u-1-24 pure-u-md-1-6 pure-u-xl-1-4"></div>
</div>

