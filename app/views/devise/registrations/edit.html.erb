<div class="pure-g">
  <div class="pure-u-1-24 pure-u-md-1-6 pure-u-xl-1-4"></div>
  <div class="pure-u-22-24 pure-u-md-2-3 pure-u-xl-1-2 devise-card">
    <div>
      <h1><%= t('.title', resource: resource_name.to_s.humanize) %></h1>

      <%= form_for(resource, as: resource_name,
                   url: registration_path(resource_name),
                   html: { method: :put, class: 'pure-form pure-form-stacked devise-form mb-3' }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, required: true, autofocus: true, autocomplete: 'name' %>
        </div>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, required: true, autocomplete: 'email' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %>
          <small>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</small>
          <%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
            <small><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :current_password %>
          <small>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</small>
          <%= f.password_field :current_password, autocomplete: 'off' %>
        </div>

        <div class="actions">
          <%= link_to icon('fas', 'chevron-left', t('devise.shared.links.back')),
                      :back, class: 'pure-button button-secondary' %>
          <%= f.button icon('far', 'save', t('.update')),
                       class: 'pure-button button-primary' %>
        </div>
      <% end %>

      <% if policy(resource).destroy? %>
        <div class="devise-form">
          <h2 class="mt-0"><%= t('.cancel_my_account') %></h2>

          <p>
            <%= t('.unhappy') %>
            <%= button_to t('.cancel_my_account'), registration_path(resource_name),
                          data: { confirm: t('.are_you_sure') }, method: :delete,
                          class: 'pure-button button-danger' %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="pure-u-1-24 pure-u-md-1-6 pure-u-xl-1-4"></div>
</div>