<div class="pure-g">
  <div class="pure-u-1-24 pure-u-md-1-6 pure-u-xl-1-4"></div>
  <div class="pure-u-22-24 pure-u-md-2-3 pure-u-xl-1-2 devise-card">
    <div>
      <h1><%= t('.sign_up') %></h1>

      <%= form_for(resource, as: resource_name,
                   url: registration_path(resource_name),
                   html: { class: 'pure-form pure-form-stacked devise-form' }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, required: true, autofocus: true,
                           autocomplete: 'name' %>
        </div>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, required: true, autocomplete: 'email' %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
            <small>
              <%= t('devise.shared.minimum_password_length',
                    count: @minimum_password_length) %>
            </small>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.button icon('fas', 'user-plus', t('.sign_up')),
                       class: 'pure-button button-primary pure-button-block mb-4' %>
          <%= render 'devise/shared/links' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="pure-u-1-24 pure-u-md-1-6 pure-u-xl-1-4"></div>
</div>
