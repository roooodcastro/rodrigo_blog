<div class="pure-g">
  <div class="pure-u-1-24 pure-u-md-1-6 pure-u-xl-1-4"></div>
  <div class="pure-u-22-24 pure-u-md-2-3 pure-u-xl-1-2 devise-card">
    <div>
      <h1><%= t('.forgot_your_password') %></h1>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                   html: { method: :post,
                           class: 'pure-form pure-form-stacked devise-form' }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, required: true,
                            autocomplete: 'email' %>
        </div>

        <div class="actions">
          <%= f.button icon('fas', 'unlock-alt', t('.send_me_reset_password_instructions')),
                       class: 'pure-button button-primary pure-button-block mb-4' %>
          <%= render 'devise/shared/links' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="pure-u-1-24 pure-u-md-1-6 pure-u-xl-1-4"></div>
</div>
