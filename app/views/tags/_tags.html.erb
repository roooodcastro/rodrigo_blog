<% if tags.present? %>
  <% tags.each do |tag| %>
    <span class="blog-tag">
      <span></span>
      <%= link_to tag.name, tag_path(tag.slug),
                  tabindex: allow_tab ? nil : -1 %>
    </span>
  <% end %>
<% else %>
  <span class="blog-tag"><span></span><em><%= t '.no_tag' %></em></span>
<% end %>
