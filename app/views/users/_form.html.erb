<%= form_with(model: user, local: true,
              html: { method: :put, class: 'pure-form pure-form-stacked' }) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, autofocus: true, autocomplete: 'name' %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, required: true, autocomplete: 'email' %>
  </div>

  <div class="field">
    <%= f.label :admin, class: 'pure-checkbox' do %>
      <%= f.check_box :admin %>
      <%= User.human_attribute_name :admin %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :poster, class: 'pure-checkbox' do %>
      <%= f.check_box :poster %>
      <%= User.human_attribute_name :poster %>
    <% end %>
  </div>

  <div class="actions">
    <%= link_to icon('fas', 'chevron-left', t(:back)), back_path,
                class: 'pure-button button-secondary' %>
    <%= f.button icon('far', 'save', t('.save')),
                 class: 'pure-button button-primary' %>
  </div>
<% end %>