<div class="pure-g">
  <div class="pure-u-1 pure-u-lg-3-4">
    <article class="blog-article">
      <header>
        <h1>
          <%= article.title %>
          <small>
            by <%= article.link_to_author %>,
            <%= article.published_date %>
          </small>
        </h1>
      </header>
      <% if article.summary.present? %>
        <section class="blog-article-summary">
          <%= article.summary %>
        </section>
      <% end %>

      <section class="blog-article-content">
        <%= article.render_content %>
      </section>
    </article>
  </div>
  <div class="pure-u-0 pure-u-lg-1-4">
    <section class="blog-article-sidebar">
      <% if policy(@article).update? %>
        <%= link_to 'Edit', edit_blog_article_path(@article) %>
        <%= article.publish_button %>
      <% end %>
    </section>
  </div>
</div>
