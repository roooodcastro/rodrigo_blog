<div class="pure-g">
  <div class="pure-u-1 pure-u-lg-3-4">
    <article class="blog-article">
      <header>
        <h1>
          <%= article.title %>
          <small>
            by <strong><%= article.author.email %></strong>
            at <strong><%= l article.created_at, format: :long %></strong>
          </small>
        </h1>
      </header>
      <section class="blog-article-summary">
        <%= article.summary %>
      </section>

      <section class="blog-article-content">
        <% renderer = Redcarpet::Markdown.new(Redcarpet::Render::HTML, autolink: true, tables: true) %>
        <%= renderer.render(article.content).html_safe %>
      </section>
    </article>
  </div>
  <div class="pure-u-0 pure-u-lg-1-4">
    <section class="blog-article-sidebar">
    </section>
  </div>
</div>
