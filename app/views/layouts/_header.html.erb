<header class="header-dark">
  <div class="pure-g">
    <div class="pure-u-lg-1-24 pure-u-xl-1-12"></div>
    <div class="pure-u-1 pure-u-lg-11-12 pure-u-xl-5-6 header-content">
      <h1>
        <%= image_tag 'blowing_stuff_logo.svg' %>
        <%= t(:title) %>
      </h1>
      <div class="header-user">
        <% if signed_in? %>
        <div class="pure-menu pure-menu-horizontal">
          <ul class="pure-menu-list">
            <li class="pure-menu-item pure-menu-has-children pure-menu-allow-hover">
              <a href="#" class="pure-menu-link"><%= current_user.email %></a>
              <ul class="pure-menu-children">
                <li class="pure-menu-item">
                  <%= link_to icon('far', 'user', 'My Profile'),
                              user_path(current_user),
                              class: 'pure-menu-link' %>
                </li>
                <li class="pure-menu-item">
                  <%= link_to icon('fas', 'sign-out-alt', 'Sign out'),
                              destroy_user_session_path,
                              method: :delete, class: 'pure-menu-link' %>
                </li>
              </ul>
            </li>
          </ul>
        </div>
        <% else %>
          <%= link_to 'Sign in', new_user_session_path %>
        <% end %>
      </div>
    </div>
    <div class="pure-u-lg-1-24 pure-u-xl-1-12"></div>
  </div>
</header>
